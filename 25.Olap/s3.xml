<clickhouse>
    <storage_configuration>       
        <disks>
            <s3>
                <type>s3</type>
                <endpoint>http://minio:9000/raw//</endpoint>
                <access_key_id>cursolab</access_key_id>
                <secret_access_key>cursolab</secret_access_key>
                <region></region>
                <metadata_path>/var/lib/clickhouse/disks/s3/</metadata_path>
            </s3>
            <s3_cache>
                <type>cache</type>
                <disk>s3</disk>
                <path>/var/lib/clickhouse/disks/s3_cache/</path>
                <max_size>10Gi</max_size>
            </s3_cache>
        </disks>  
         <policies>
            <s3_main>
                <volumes>
                    <s3>
                        <disk>s3</disk>
                    </s3>
                </volumes>
            </s3_main>
        </policies>     
    </storage_configuration>
</clickhouse>